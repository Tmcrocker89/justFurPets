<div class="h-100 row align-items-center vertical-center-row d-flex justify-content-lg-center">
  <div class="col-md-12">
    <div class="center col-md-3">
      <h1 class="fs-1 btnColor">Login</h1>
      <form class="form login-form">
        <div class="form-group">
          <label class="fs-3 btnColor" for="email-login">User Name:</label>
          <input class="form-input fs-2" type="text" id="email-login" />

        </div>
        <div class="form-group">
          <label class="fs-3 btnColor" for="password-login">Password:</label>
          <input class="form-input fs-3" type="password" id="password-login" />

        </div>
        <div class="form-group">
          <button class="btn btn-primary fs-3 btnColor align-items-center" type="submit">Login</button>
          <button id="signUp" class="btn btn-primary fs-3 btnColor align-items-center" type="button">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="h-100 row align-items-center vertical-center-row d-flex  justify-content-lg-center" id="dialog" >
  <div class="col-md-10">
    <div class="center col-md-5">
      <h2 class="fs-1 btnColor">Sign Up</h2>
      <form class="form login-form">
        <div class="form-group">
                    <label class="fs-2 btnColor" for="email-login">User Name:</label>
          <input class="form-input fs-2" type="text" id="email-signUp" />

        </div>
        <div class="form-group">
                    <label class="fs-2 btnColor" for="password-login">Password:</label>
          <input class="form-input fs-2" type="password" id="password-signUp" />

        </div>
        <div class="form-group">
          <input class="form-input fs-2" type="password" id="password-verify" />
          <label class="fs-2 btnColor" for="password-login">:Verify Password</label>
        </div>
        <div class="form-group">
          <button class="btn btn-primary fs-2 btnColor" id="createAcct">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!--Modal: Login / Register Form-->

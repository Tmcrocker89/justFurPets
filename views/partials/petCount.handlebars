<div class="col">
<div class="card text-dark bg-light" style="width: 20rem;margin-top:20px">  
    <div class="card-header">Pet Count by Pet Type</div>
    <div class="card-body">
    <canvas id="myChart" width="200" height="200"></canvas>
    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        const pet_count = [{{parameter}}]
        console.log(pet_count)
        const pet_type = ['Bird','Cat','Dog','Others']
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: pet_type,
                datasets: [{
                    label: '# of Pets',
                    data: pet_count,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(150, 206, 86, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(150, 206, 86, 0.2)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
    </div>
</div>
</div>

<div id="createPage">
    

    <div id='inputs'>
        <p id="title">Createpet</p>
        <div class="input-group mb-3">
            <div class="input-group mb-3 ">
                <div class="input-group-prepend ">
                    <label class="input-group-text customprepend" for="inputGroupSelect01">Pet Owner</label>
                </div>
                <select class="custom-select customprepend petOwnerField" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    {{#each petOwners as |petOwner|}}
                    <option value="{{petOwner.id}}">{{petOwner.owner_name}}</option>
                    {{/each}}
                </select>
                <button type="button" class="btn btn-primary" id="createPetOwnerBtn" data-bs-toggle="modal" data-bs-target="#createPetOwnerModal">
                    Create a new owner
                </button>
                    <!-- Modal -->
                <div class="modal fade" id="createPetOwnerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createPetOwnerModalLabel">Create New Pet Owner</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form class="form new-petowner-form">
                            <div class="form-group">
                                <label for="ownerName">Owner Name</label>
                                <input type="ownerName" class="form-control" id="ownerNameInput" placeholder="Enter Full Name">
                            </div>
                            <div class="form-group">
                                <label for="ownerPhoneNumber">Phone Number</label>
                                <input type="ownerPhoneNumber" class="form-control" id="ownerPhoneNumberInput" aria-describedby="Help" placeholder="1234567890">
                                <small id="Help" class="form-text text-muted">We'll never share your phone number with anyone else.</small>

                            </div>
                            <button type="submit" class="btn btn-primary" id="submitPetOwnerBtn">Submit</button>
                        </form>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="createPetOwnerCloseBtn" data-bs-dismiss="modal">Close</button>
                        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
                    </div>
                    </div>
                </div>
                </div>

        </div>
            <div class="input-group-prepend customprepend">
                <span class="input-group-text customprepend" id="inputGroup-sizing-default">Pet's Name:</span>
            </div>
            <input type="text" class="form-control customprepend petNameField" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
         <div class="input-group mb-3">
            <div class="input-group-prepend ">
                <label class="input-group-text customprepend" for="inputGroupSelect01" >Pet Type</label>
            </div>
            <select class="custom-select customprepend petTypeField" id="inputGroupSelect01">
                <option selected>Choose...</option>
                <option value="cat">Cat</option>
                <option value="dog">Dog</option>
                <option value="bird">Bird</option>
                <option value="others">Others</option>

            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend ">
                <span class="input-group-text customprepend" id="inputGroup-sizing-default">Pet's Species:</span>
            </div>
            <input type="text" class="form-control customprepend petSpeciesField" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend ">
                <label class="input-group-text customprepend" for="inputGroupSelect01">Overnight Stay?</label>
            </div>
            <select class="custom-select customprepend petOvernightField" id="inputGroupSelect01">
                <option selected>Choose...</option>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend customprepend">
                <span class="input-group-text customprepend" id="inputGroup-sizing-default">Check-In Date (YYYY-MM-DD)</span>
            </div>
            <input type="text" class="form-control customprepend petCheckInField" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend customprepend">
                <span class="input-group-text customprepend" id="inputGroup-sizing-default">Check-Out Date  (YYYY-MM-DD)</span>
            </div>
            <input type="text" class="form-control customprepend petCheckOutField" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
         <div class="input-group mb-3">
            <div class="input-group-prepend customprepend">
                <span class="input-group-text customprepend" id="inputGroup-sizing-default">Stay Duration in Days</span>
            </div>
            <input type="text" class="form-control customprepend petDurationField" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend customprepend">
                <label class="input-group-text customprepend" for="inputGroupSelect01">Choose a Kennel Size</label>
            </div>
            <select class="custom-select customprepend petKennelSizeField" id="inputGroupSelect01">
                <option selected>Choose...</option>
                <option value="s">Small</option>
                <option value="m">Medium</option>
                <option value="l">Large</option>
            </select>
        </div>
    </div>
    <button type="button" class="btn btn-dark createPetSubmit">Submit</button>
</div>



<script src="./js/createPetPageScript.js"></script>